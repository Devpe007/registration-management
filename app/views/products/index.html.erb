<div class="bg-secondary" >
  <h1 class="text-light" >Produtos</h1>
</div>

<table class="table table-light">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Preço</th>
      <th scope="col">Quatidade</th>
      <th scope="col">Opções</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to "Editar", edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-between">
  <section>
    <%= link_to "Novo produto", new_product_path, class: "btn btn-outline-success" %>
    <%= link_to "Voltar", dashboard_path, class: "btn btn-outline-primary" %>
  </section>

  <%= will_paginate @products, list_classes: %w(pagination justify-content-end) %>
</div>
