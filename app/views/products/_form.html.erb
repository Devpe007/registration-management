<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" >
    <%= form.label :name, style: "display: block", class: "form-label" %>
    <%= form.text_field :name, class: "mb-3 form-control", placeholder: "Digite o nome:" %>
  </div>

  <div class="form-group" >
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class: "mb-3 form-control", placeholder: "Digite o preço:" %>
  </div>

  <div class="form-group" >
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "mb-3 form-control", placeholder: "Digite a descrição:" %>
  </div>

  <div class="form-group" >
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, class: "mb-3 form-control", placeholder: "Digite a quantidade:" %>
  </div>

  <div class="mt-3" data-controller="sweetalert" >
    <%= form.submit "Salvar", class: "btn btn-outline-success", data: { controller: "sweetalert", action: "sweetalert#successModal" } %>
    <%= link_to "Voltar", products_path, class: "btn btn-outline-primary"%>
  </div>
<% end %>
